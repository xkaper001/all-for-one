{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hackit",
  "title": "Hackit",
  "description": "All what a hacker needs.",
  "icon": "extension-icon.png",
  "version": "0.1.0",
  "author": "xkaper001",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Developer Tools",
    "Data"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "base",
      "title": "Base",
      "subtitle": "Hackit",
      "description": "Convert numbers between binary, octal, decimal, hexadecimal, and ASCII",
      "mode": "view"
    },
    {
      "name": "hash",
      "title": "Hash",
      "subtitle": "Hackit",
      "description": "Computer hash of a string",
      "mode": "view"
    },
    {
      "name": "decrypt-vigenere",
      "title": "Decrypt Vigenère Cipher",
      "subtitle": "Hackit",
      "description": "Decrypt Vigenère cipher",
      "mode": "view",
      "arguments": [
        {
          "name": "key",
          "placeholder": "Key",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "caesar",
      "title": "Caesar Cipher",
      "subtitle": "Hackit",
      "description": "Encrypt/Decrypt with Caesar Cipher",
      "mode": "view",
      "arguments": [
        {
          "name": "shift",
          "placeholder": "Shift",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "rot",
      "title": "ROT Cipher",
      "subtitle": "Hackit",
      "description": "Show all 26 rotations of a string",
      "mode": "view"
    },
    {
      "name": "xor",
      "title": "XOR Calculator",
      "subtitle": "Hackit",
      "description": "Calculate bitwise XOR of two inputs",
      "mode": "view",
      "arguments": [
        {
          "name": "key",
          "placeholder": "Key / Input B",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "aes",
      "title": "AES Encryption",
      "subtitle": "Hackit",
      "description": "Encrypt text using AES-256-CBC",
      "mode": "view",
      "arguments": [
        {
          "name": "key",
          "placeholder": "Key",
          "type": "password",
          "required": false
        }
      ]
    },
    {
      "name": "pbkdf2",
      "title": "PBKDF2 Key Derivation",
      "subtitle": "Hackit",
      "description": "Derive key using PBKDF2-SHA256",
      "mode": "view",
      "arguments": [
        {
          "name": "salt",
          "placeholder": "Salt",
          "type": "text",
          "required": false
        },
        {
          "name": "iterations",
          "placeholder": "Iterations",
          "type": "text",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.10",
    "@raycast/utils": "^1.17.0",
    "bs58": "^6.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}